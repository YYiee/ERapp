<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 圆角，数值越大角越圆 -->
    <corners android:radius="30dp" />
    <!-- 填充色，这就是按钮的颜色 -->
    <solid android:color="#FF6200EE" />
    <!-- 可选：内边距，让文字不紧贴边缘 -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp" />
</shape>